{
    "configurations": [
        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/Debug/firmware.elf",
            "name": "openocd with cmsis-dap",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/stm32g4x.cfg"
            ],
            "searchDir": [],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none"
        },
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "probe-rs debug",
            "cwd": "${workspaceFolder}",
            "connectUnderReset": false,
            "chip": "STM32G441KBTx",
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true
            },
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "programBinary": "./build/Debug/firmware.elf"
                }
            ]
        }
    ]
}